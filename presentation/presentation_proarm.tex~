\begin{frame}
  \begin{alertblock}{Problématique rencontrée}
    \begin{itemize}
    \item Controle d'un servo-moteur avec ROS
    \item Connexion de la InMoovhand avec ROS ou PC ou carte embarquée
    \item Choix du servo-moteur : classique ou série (\emph{c.f.} Dynamixel)
    \item Solution Arduino ou carte embarquée alternative
    \end{itemize}
  \end{alertblock}
\end{frame}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% 
\section{Controle de Servo-moteur}

\begin{frame}
  \begin{exampleblock}{Outils : RoS Hydro}

    \begin{columns}

      \begin{column}{.50\textwidth}
        \begin{figure}[!t]
          \includegraphics[scale=0.1]{figure/Hydromedusa.jpg}
          \label{fig-hydro}
        \end{figure}
      \end{column}

      \hfill%
      \begin{column}{.50\textwidth}
        \begin{itemize}
        \item ROS: Système d'exploitation pour controler des robots .
        \item rosserial-arduino: Package de ROS pour controler une carte embarquée .
        \end{itemize}
      \end{column}%
    \end{columns}

  \end{exampleblock}

\end{frame}


\begin{frame}
  \begin{exampleblock}{Outils : Arduino Uno}
    \begin{columns}

      \begin{column}{.40\textwidth}
        \begin{figure}[!t]
          \includegraphics[scale=1.0]{figure/ArduinoUno.jpg}
          \label{fig-arduino}
        \end{figure}
      \end{column}

      \hfill%
      \begin{column}{.60\textwidth}
        \begin{itemize}
        \item Prix bas : environ 20 euros .
        \item Alimentation : 5V pour l'alimentation(par usb), 7-12V recommandé .
        \item Nombres de servo-moteur maximum : 6 .
        \end{itemize}
      \end{column}%
    \end{columns}
  \end{exampleblock}
\end{frame}

\begin{frame}
  \begin{exampleblock}{Schema pratique: }
    \begin{columns}
      \begin{column}{.50\textwidth}
        \begin{figure}[!t]
          \includegraphics[scale=0.1]{figure/arduino_servo.png}
          \label{fig-arduino-servo}
        \end{figure}
      \end{column}
      \hfill%
      \begin{column}{.73\textwidth}
        \begin{itemize}
        \item Controle depuis ROS .
        \item Instructions reçues par port usb .
        \item Signaux transmits au Servo-moteur branché .
        \end{itemize}
      \end{column}%
    \end{columns}
  \end{exampleblock}

\end{frame}

