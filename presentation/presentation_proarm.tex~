\section{Connexion de la main robot InMoovhand}

\begin{frame}
  % \textbf{ La connexion de la main reviens à la connexion de chaque moteur de la main à la carte Arduino }
  \begin{exampleblock}{La connexion de la main reviens à la connexion de chaque moteur de la main à la carte Arduino}
    \begin{columns}
      \begin{column}{.25\textwidth}
        \begin{figure}[!t]
          \includegraphics[scale=0.075]{figure/in-moov-servo-moteursbis.png}
          \label{fig-inmoov-servo-motor-bis}
        \end{figure}
      \end{column}
      \hfill%
      \begin{column}{.50\textwidth}
        \begin{itemize}
        \item 1 moteur => 1 commande => 1 IO
        \item 1 IO = fil jaune de commande
        \item possibilité de couplage des alim et des masses ?
        \item Amperage max de servomoteurs
        \end{itemize}
      \end{column}%
    \end{columns}
  \end{exampleblock}
\end{frame}



